{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "paths": {},
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public"]
}
