service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read;
    }

    match /projects/{project} {
      allow write: if request.auth != null && project.matches(request.auth.uid + ".*");
      
      match /files/{file=**} {
        allow write: if request.auth != null && project.matches(request.auth.uid + ".*");
      }
    }
  }
}
